@model IEnumerable<ContosoUniversity.DTOs.StudentDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.Courses != null && ViewBag.studentD!=null)
{
    var listCourses = (IEnumerable<ContosoUniversity.DTOs.CoursesDTO>)ViewBag.Courses;
    
<h3>Course Enrolled in Selected Students:  <b>@ViewBag.studentD</b></h3>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Credits</th>
        </tr>
        @foreach (var item in listCourses)
        {
        <tr>
            <td>@item.Title</td>
            <td>@item.Credits</td>
        </tr>
        }
    </table>

}