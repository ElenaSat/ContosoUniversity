@model IEnumerable<ContosoUniversity.DTOs.OfficeAssignmentDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstructorID" class="btn btn-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InstructorID" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InstructorID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
